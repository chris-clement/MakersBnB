<!DOCTYPE html>
<head>
  <title>List a space</title>
  <link rel="stylesheet" type="text/css" href="<%= url("/listing_form_style.css")%>">
  <script src="https://kit.fontawesome.com/ea92a85679.js" crossorigin="anonymous"></script>
</head>
<body>
  <%# header %>
  <div id='top-bar'>
    <div id='logo'>
    </div>
    <h1> MakersBnB </h1>
  </div>
  <%# navbar %>
  <nav> 
   <a href="/home" id='home'><i class="fas fa-home"></i> Home</a>
    <div id="nav-links-smaller">
      <a href="/">Logout</a><i class="fas fa-user"></i>
    </div>
  </nav>

  <%# main %>
  <div class = "container">

    <div id='message'>
      <h4>Booking requested for <%= @date_booked %></h4>
        <p id='place-name'>Place Name:</p> <h3><%= Updater.space_name(session[:space_id])[0].to_s %> 
      </h3>
    </div>
  <%# button %>
    <form action="/booking/date_selection/<%= session[:space_id]%>" method='get'>
      <input type='submit' value='Back to dates'>
    </form>
  </div>
</body>
