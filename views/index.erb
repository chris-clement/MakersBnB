<head> 
  <link href="<%= url('/index.css') %>" rel="stylesheet" type="text/css" />
</head>

<body>
  <%# header %>
  <header id='top-bar'>
    <div id='logo'></div>
    <h1> MakersBnB </h1>
  </header> 
  <%# login sign up buttons %>
  <div id='login-signup-container'>
      <form action="/login" method="get">
        <input type="submit" value="Login" id='login-btn'>
      </form>
      <form action="/sign_up" method="get">
        <input type="submit" value="Sign Up" id='signup-btn'>
      </form>
  </div>

  <h3> Discover places to stay </h3>

    <% @listings.each do |listing| %>
  <div id='space-container'>
    <img src="<%=@space_url%>" alt='space'>
      <div id='details-space'>
        <h4 d='name'><%= listing['name'] %></h4>
        <%# <span>Description:</span>  %>
        <div id='description'>
          <p><%= listing['description'] %></p>
        </div>
        <div id='price'>
         Â£<%= listing['price'] %> /night
        </div>
      </div>
      <form action='/booking/date_selection' method='get'>
        <input type="submit" value="Book Now" id='book-now'>
      </form>
  </div>
    <% end %>
</body>